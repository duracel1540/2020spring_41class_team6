<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_detail">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/first"

    android:layout_alignParentRight="true">
    <TextView
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TextView"
        />

    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TextView"
        /> </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="125dp"
            android:layout_height="84dp" />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Hello World!" />

        <TextView
            android:id="@+id/ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="TextView" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView" />

        <TextView
            android:id="@+id/uploaded_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/removeitem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignRight="@id/listview"


        android:onClick="remove"
        android:text="Remove From ShoppingCart" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="230dp"
        android:layout_height="381dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:layout_alignParentRight="true"

        android:orientation="vertical">

        <Button
            android:id="@+id/addcart"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:onClick="shoppingcartadd"
            android:text="+" />

        <Button
            android:id="@+id/deletecart"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:onClick="shoppingcartdelete"
            android:text="-" />

        <Button
            android:id="@+id/viewshoppincart"
            android:layout_width="150dp"
            android:layout_height="40dp"

            android:onClick="seeshoppingcart"
            android:text="ViewShoppingcart"
            android:textSize="10dp" />
    </LinearLayout>


</RelativeLayout>